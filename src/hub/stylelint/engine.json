{
    "$schema": "./../.schema/engine.json",
    "name": "stylelint",
    "description": "A mighty, modern CSS linter that helps you enforce consistent conventions and avoid errors in your stylesheets.",
    "version": "7.11.1",
    "url": "https://stylelint.io/",
    "languages": [
        "css"
    ],
    "extensions": [
        "*.css",
        "*.scss",
        "*.less",
        "*.sss"
    ],
    "configs": [
        ".stylelintrc",
        ".stylelintrc.json",
        ".stylelintrc.yaml",
        ".stylelintrc.yml",
        ".stylelintrc.js",
        "stylelint.config.js"
    ],
    "license": "MIT",
    "areas": [
        "simplification",
        "syntax",
        "formatting"
    ],
    "requirements": [
        {
            "manager": "system",
            "package": "npm"
        },
        {
            "manager": "npm",
            "package": "stylelint",
            "version": "7.11.1"
        }
    ],
    "defaults": {
        "": "**/**/*.*",
        "--custom-formatter": "file://{schema}/stylelint/reporter.js",
        "--config": "file://{schema}/stylelint/.stylelintrc"
    },
    "stdin": {
        "--stdin-filename": "file://{stdin}"
    },
    "optionsDelimiter": "="
}
