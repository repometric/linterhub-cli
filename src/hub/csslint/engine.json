{
    "$schema": "./../.schema/engine.json",
    "name": "csslint",
    "description": "Automated linting of Cascading Stylesheets",
    "url": "http://csslint.net",
    "languages": [
        "css"
    ],
    "extensions": [
        "*.css"
    ],
    "license": "MIT",
    "areas": [
        "syntax",
        "code simplification"
    ],
    "requirements": [
        {
            "manager": "system",
            "package": "npm"
        },
        {
            "manager": "npm",
            "package": "csslint"
        }
    ],
    "version": {
        "local": "v1.0.5",
        "package": "1.0.5"
    },
    "postfix": " | node file://{schema}/csslint/reporter.js",
    "prefix": "node file://{schema}/csslint/prefix.js ",
    "optionsDelimiter": "=",
    "defaults": {
        "": "./",
        "--format": "compact"
    },
    "stdin":
    {
        "available": false
    }
}
