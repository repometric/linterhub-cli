{
    "$schema": "./../linter.schema.json",
    "name": "eslint",
    "description": "A fully pluggable tool for identifying and reporting on patterns in JavaScript",
    "url": "http://eslint.org",
    "languages": [ "javascript", "jsx" ],
    "extensions": [ "*.js" ],
    "license": "MIT",
    "areas": [ "syntax" ],
    "requirements": [ 
        { "manager": "system", "package": "npm" },
        { "manager": "npm", "package": "eslint" }
    ],
    "version": {
        "local": "v3.2.0",
        "manager": "3.2.0"
    },
    "defaults": {
        "--format": "json",
        "--config": "file://{schema}/eslint/.eslintrc.js",
        "": "*/**/*.js"
    }
}