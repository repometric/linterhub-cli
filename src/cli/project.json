{
  "version": "1.3.1-*",
  "buildOptions": {
    "outputName": "cli",
    "debugType": "portable",
    "emitEntryPoint": true,
    "compile": {
      "exclude": [ "linterhub" ]
    }
  },
  "publishOptions": {
    "include": ["Config", "linterhub"]
  },

  "dependencies": {
    "NETStandard.Library": "1.6.1",
    "Microsoft.NETCore.Runtime.CoreCLR": "1.1.0",
    "Microsoft.NETCore.DotNetHostPolicy": "1.1.0",
    "Mono.Options": "4.4.0",
    "System.Diagnostics.Process": "4.3.0",
    "engine": "1.2.0-*"
  },

  "frameworks": {
    "netstandard1.6": {
       "imports": "dnxcore50"
    },
    "netcoreapp1.0": {
      "imports": "dnxcore50",
       "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0"
        }
       }
    }
  },
  "runtimes": {
    "win10-x64": {},
    "win8-x64": {},
    "osx.10.10-x64": {},
    "osx.10.11-x64": {},
    "debian.8-x64": {},
    "ubuntu.16.04-x64": {}
  }
}
